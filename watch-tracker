        // State
        let currentChart = null;
        let comparisonWatches = [];
        let priceAlerts = JSON.parse(localStorage.getItem('priceAlerts')) || [];
        let collection = JSON.parse(localStorage.getItem('watchCollection')) || [];
        let searchHistory = JSON.parse(localStorage.getItem('searchHistory')) || [];
        let currentView = 'search';
        let currentWatchData = null; // Track the currently displayed watch

        // ============================================
        // SEARCH FUNCTION - Modify to connect to your API
        // ============================================
        
        function searchWatch() {
            const brand = document.getElementById('brand').value.trim();
            const model = document.getElementById('model').value.trim();
            const year = document.getElementById('year').value.trim();
            const reference = document.getElementById('reference').value.trim();

            if (!brand && !model && !year && !reference) {
                alert('Please enter at least one search criteria');
                return;
            }

            // Track search in history
            const searchQuery = { brand, model, year, reference, timestamp: Date.now() };
            searchHistory.unshift(searchQuery);
            searchHistory = searchHistory.slice(0, 100); // Keep last 100 searches
            localStorage.setItem('searchHistory', JSON.stringify(searchHistory));

            // Show loading
            document.getElementById('loadingState').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';

            // Simulate API call
            setTimeout(() => {
                console.log('Search criteria:', { brand, model, year, reference });
                
                // Find matching watches
                let matchingWatches = Object.values(MOCK_WATCHES).filter(watch => {
                    let matches = true;
                    
                    if (brand && !watch.brand.toLowerCase().includes(brand.toLowerCase())) {
                        matches = false;
                    }
                    if (model && !watch.model.toLowerCase().includes(model.toLowerCase())) {
                        matches = false;
                    }
                    if (year) {
                        // If year is specified, watch must have a year and it must match
                        if (!watch.year || watch.year.toString() !== year) {
                            matches = false;
                        }
                    }
                    if (reference && !watch.reference.toLowerCase().includes(reference.toLowerCase())) {
                        matches = false;
                    }
                    
                    return matches;
                });

                console.log('Matching watches found:', matchingWatches.length);
                console.log('Watches:', matchingWatches.map(w => `${w.brand} ${w.model} (${w.year})`));

                // If no matches, use first watch as example
                if (matchingWatches.length === 0) {
                    console.log('No matches found, showing default Rolex Submariner');
                    matchingWatches = [MOCK_WATCHES['rolex-submariner-126610ln']];
                }

                // TODO: Replace with actual API call
                // Example API structure:
                // fetch(`/api/watches/search?brand=${brand}&model=${model}&year=${year}&reference=${reference}`)
                //     .then(response => response.json())
                //     .then(data => {
                //         if (data.length > 1) {
                //             displaySearchResults(data);
                //         } else {
                //             displayWatchData(data[0]);
                //         }
                //     })
                //     .catch(error => console.error('Error:', error));

                // If multiple results, show list; otherwise show single watch
                if (matchingWatches.length > 1) {
                    displaySearchResults(matchingWatches);
                } else {
                    displayWatchData(matchingWatches[0]);
                }
            }, 800);
        }

        // ============================================
        // DISPLAY FUNCTIONS
        // ============================================

        function displaySearchResults(watches) {
            // Hide loading
            document.getElementById('loadingState').style.display = 'none';
            
            // Create a search results view
            const resultsSection = document.getElementById('resultsSection');
            resultsSection.innerHTML = `
                <div class="watch-card">
                    <div class="section-header" style="border-bottom: 1px solid var(--border-subtle); margin-bottom: 2rem;">
                        <h2>Search Results (${watches.length} watches found)</h2>
                    </div>
                    <div class="trending-grid">
                        ${watches.map(watch => `
                            <div class="trending-card" style="cursor: default; padding-bottom: 1rem;">
                                <div onclick="selectWatchFromResults('${watch.brand}', '${watch.model}', '${watch.reference}')" style="cursor: pointer;">
                                    <h3>${watch.brand} ${watch.model}</h3>
                                    <div class="reference">Ref. ${watch.reference}${watch.year ? ` • ${watch.year}` : ''}</div>
                                    <div class="trending-stats">
                                        <div class="trending-price">$${watch.currentPrice.toLocaleString()}</div>
                                        ${watch.year ? `<div class="trending-badge">${watch.year}</div>` : ''}
                                    </div>
                                </div>
                                <button style="margin-top: 1rem; width: 100%; padding: 0.75rem; font-size: 0.8rem;" 
                                        onclick="event.stopPropagation(); quickAddFromSearch('${watch.brand}', '${watch.model}', '${watch.reference}', ${watch.currentPrice})">
                                    + Add to Collection
                                </button>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;
            resultsSection.style.display = 'block';
            resultsSection.scrollIntoView({ behavior: 'smooth' });
        }

        function selectWatchFromResults(brand, model, reference) {
            // Find the exact watch
            const watch = Object.values(MOCK_WATCHES).find(w => 
                w.brand === brand && w.model === model && w.reference === reference
            );
            
            if (watch) {
                displayWatchData(watch);
            }
        }

        function displayWatchData(data) {
            // Store current watch data for quick add to collection
            currentWatchData = data;
            
            // Hide loading
            document.getElementById('loadingState').style.display = 'none';
            
            // Reset results section to single watch view
            const resultsSection = document.getElementById('resultsSection');
            resultsSection.innerHTML = `
                <div class="watch-card">
                    <div class="watch-header">
                        <div class="watch-info">
                            <h2 id="watchName">-</h2>
                            <div class="reference" id="watchReference">-</div>
                            <p class="description" id="watchDescription">-</p>
                        </div>
                        <div class="price-box">
                            <div class="current-price" id="currentPrice">-</div>
                            <div class="price-change" id="priceChange">-</div>
                            <button style="margin-top: 1.5rem; width: 100%;" onclick="quickAddToCollection()">+ Add to Collection</button>
                        </div>
                    </div>

                    <!-- Tabs -->
                    <div class="tabs">
                        <button class="tab active" onclick="switchTab('overview')">Overview</button>
                        <button class="tab" onclick="switchTab('history')">Price History</button>
                        <button class="tab" onclick="switchTab('comparison')">Compare</button>
                    </div>

                    <!-- Overview Tab -->
                    <div id="overviewTab" class="tab-content active">
                        <div class="chart-container">
                            <canvas id="priceChart"></canvas>
                        </div>

                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-label">Average Price</div>
                                <div class="stat-value" id="avgPrice">-</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Highest Price</div>
                                <div class="stat-value" id="maxPrice">-</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Lowest Price</div>
                                <div class="stat-value" id="minPrice">-</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Volatility</div>
                                <div class="stat-value" id="volatility">-</div>
                            </div>
                        </div>
                    </div>

                    <!-- History Tab -->
                    <div id="historyTab" class="tab-content">
                        <table class="price-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Price</th>
                                    <th>Change</th>
                                    <th>Source</th>
                                </tr>
                            </thead>
                            <tbody id="historyTableBody">
                            </tbody>
                        </table>
                    </div>

                    <!-- Comparison Tab -->
                    <div id="comparisonTab" class="tab-content">
                        <div class="comparison-grid" id="comparisonGrid">
                            <!-- Comparison cards will be added here -->
                        </div>
                        <button class="add-comparison-btn" onclick="addComparison()">+ Add Watch to Compare</button>
                    </div>
                </div>
            `;
            resultsSection.style.display = 'block';

            // Update watch info
            document.getElementById('watchName').textContent = `${data.brand} ${data.model}`;
            const refText = `Ref. ${data.reference}${data.year ? ` • Released ${data.year}` : ''}`;
            document.getElementById('watchReference').textContent = refText;
            document.getElementById('watchDescription').textContent = data.description;
            document.getElementById('currentPrice').textContent = `$${data.currentPrice.toLocaleString()}`;

            // Calculate price change
            const firstPrice = data.priceHistory[0].price;
            const changePercent = ((data.currentPrice - firstPrice) / firstPrice * 100).toFixed(2);
            const changeElement = document.getElementById('priceChange');
            changeElement.textContent = `${changePercent >= 0 ? '+' : ''}${changePercent}% (1Y)`;
            changeElement.className = `price-change ${changePercent >= 0 ? 'positive' : 'negative'}`;

            // Calculate statistics
            const prices = data.priceHistory.map(h => h.price);
            const avgPrice = (prices.reduce((a, b) => a + b, 0) / prices.length).toFixed(0);
            const maxPrice = Math.max(...prices);
            const minPrice = Math.min(...prices);
            const volatility = ((maxPrice - minPrice) / avgPrice * 100).toFixed(1);

            document.getElementById('avgPrice').textContent = `$${parseInt(avgPrice).toLocaleString()}`;
            document.getElementById('maxPrice').textContent = `$${maxPrice.toLocaleString()}`;
            document.getElementById('minPrice').textContent = `$${minPrice.toLocaleString()}`;
            document.getElementById('volatility').textContent = `${volatility}%`;

            // Update price history table
            const tableBody = document.getElementById('historyTableBody');
            tableBody.innerHTML = data.priceHistory.map(item => `
                <tr>
                    <td>${item.date}</td>
                    <td>$${item.price.toLocaleString()}</td>
                    <td style="color: ${item.change >= 0 ? 'var(--success-green)' : 'var(--danger-red)'}">
                        ${item.change >= 0 ? '+' : ''}${item.change.toFixed(2)}%
                    </td>
                    <td>${item.source}</td>
                </tr>
            `).join('');

            // Create chart
            createPriceChart(data.priceHistory);

            // Scroll to results
            document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
        }

        function createPriceChart(priceHistory) {
            const ctx = document.getElementById('priceChart').getContext('2d');

            // Destroy existing chart if it exists
            if (currentChart) {
                currentChart.destroy();
            }

            const labels = priceHistory.map(h => h.date);
            const prices = priceHistory.map(h => h.price);

            currentChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Price (USD)',
                        data: prices,
                        borderColor: '#d4af37',
                        backgroundColor: 'rgba(212, 175, 55, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 6,
                        pointHoverRadius: 8,
                        pointBackgroundColor: '#d4af37',
                        pointBorderColor: '#0a0a0a',
                        pointBorderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(26, 26, 26, 0.95)',
                            titleColor: '#d4af37',
                            bodyColor: '#ffffff',
                            borderColor: '#d4af37',
                            borderWidth: 1,
                            padding: 12,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return '$' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                color: 'rgba(212, 175, 55, 0.1)',
                                drawBorder: false
                            },
                            ticks: {
                                color: '#a0a0a0',
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(212, 175, 55, 0.1)',
                                drawBorder: false
                            },
                            ticks: {
                                color: '#a0a0a0'
                            }
                        }
                    }
                }
            });
        }

        // ============================================
        // TAB SWITCHING
        // ============================================

        function switchTab(tabName) {
            // Update tab buttons
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');

            // Update tab content
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.classList.remove('active'));
            document.getElementById(tabName + 'Tab').classList.add('active');
        }

        // ============================================
        // COMPARISON FUNCTIONS
        // ============================================

        function addComparison() {
            const brand = prompt('Enter brand name:');
            if (!brand) return;
            
            const model = prompt('Enter model name:');
            if (!model) return;
            
            const reference = prompt('Enter reference number:');
            if (!reference) return;

            // In production, fetch real data for this watch
            // For now, create mock comparison data
            const comparisonWatch = {
                id: Date.now(),
                brand: brand,
                model: model,
                reference: reference,
                currentPrice: Math.floor(Math.random() * 50000) + 10000,
                change: (Math.random() * 20 - 10).toFixed(2)
            };

            comparisonWatches.push(comparisonWatch);
            renderComparisons();
        }

        function removeComparison(id) {
            comparisonWatches = comparisonWatches.filter(w => w.id !== id);
            renderComparisons();
        }

        function renderComparisons() {
            const grid = document.getElementById('comparisonGrid');
            grid.innerHTML = comparisonWatches.map(watch => `
                <div class="comparison-card">
                    <button class="remove-comparison" onclick="removeComparison(${watch.id})">Remove</button>
                    <h3>${watch.brand} ${watch.model}</h3>
                    <div class="reference">Ref. ${watch.reference}</div>
                    <div class="stat-label">Current Price</div>
                    <div class="stat-value">$${watch.currentPrice.toLocaleString()}</div>
                    <div class="price-change ${watch.change >= 0 ? 'positive' : 'negative'}" style="margin-top: 1rem;">
                        ${watch.change >= 0 ? '+' : ''}${watch.change}% (1Y)
                    </div>
                </div>
            `).join('');
        }

        // ============================================
        // NAVIGATION
        // ============================================

        function showView(view) {
            // Update button states
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Hide all views
            document.getElementById('searchView').style.display = 'none';
            document.getElementById('trendingView').style.display = 'none';
            document.getElementById('alertsView').style.display = 'none';
            document.getElementById('collectionView').style.display = 'none';

            // Show selected view
            currentView = view;
            if (view === 'search') {
                document.getElementById('searchView').style.display = 'block';
            } else if (view === 'trending') {
                document.getElementById('trendingView').style.display = 'block';
                loadTrending();
            } else if (view === 'alerts') {
                document.getElementById('alertsView').style.display = 'block';
                renderAlerts();
            } else if (view === 'collection') {
                document.getElementById('collectionView').style.display = 'block';
                renderCollection();
            }
        }

        // ============================================
        // AUTOCOMPLETE
        // ============================================

        function showAutocomplete(field, value) {
            if (!value || value.length < 2) {
                document.getElementById(field + 'Autocomplete').classList.remove('active');
                return;
            }

            const dropdown = document.getElementById(field + 'Autocomplete');
            let suggestions = [];

            if (field === 'brand') {
                suggestions = AUTOCOMPLETE_DATA.brands.filter(b => 
                    b.toLowerCase().includes(value.toLowerCase())
                );
            } else if (field === 'model') {
                const selectedBrand = document.getElementById('brand').value;
                const models = AUTOCOMPLETE_DATA.models[selectedBrand] || 
                              Object.values(AUTOCOMPLETE_DATA.models).flat();
                suggestions = models.filter(m => 
                    m.toLowerCase().includes(value.toLowerCase())
                );
            } else if (field === 'year') {
                suggestions = AUTOCOMPLETE_DATA.years.filter(y => 
                    y.includes(value)
                );
            } else if (field === 'reference') {
                suggestions = AUTOCOMPLETE_DATA.references.filter(r => 
                    r.toLowerCase().includes(value.toLowerCase())
                );
            }

            if (suggestions.length === 0) {
                dropdown.classList.remove('active');
                return;
            }

            dropdown.innerHTML = suggestions.slice(0, 5).map(item => `
                <div class="autocomplete-item" onclick="selectAutocomplete('${field}', '${item}')">
                    ${item}
                </div>
            `).join('');

            dropdown.classList.add('active');
        }

        function selectAutocomplete(field, value) {
            document.getElementById(field).value = value;
            document.getElementById(field + 'Autocomplete').classList.remove('active');
        }

        function showAlertAutocomplete(value) {
            if (!value || value.length < 2) {
                document.getElementById('alertAutocomplete').classList.remove('active');
                return;
            }

            const dropdown = document.getElementById('alertAutocomplete');
            const suggestions = Object.values(MOCK_WATCHES).filter(w => 
                w.brand.toLowerCase().includes(value.toLowerCase()) ||
                w.model.toLowerCase().includes(value.toLowerCase()) ||
                w.reference.toLowerCase().includes(value.toLowerCase())
            );

            if (suggestions.length === 0) {
                dropdown.classList.remove('active');
                return;
            }

            dropdown.innerHTML = suggestions.slice(0, 5).map(watch => `
                <div class="autocomplete-item" onclick="selectAlertWatch('${watch.brand}', '${watch.model}', '${watch.reference}')">
                    ${watch.brand} ${watch.model}
                    <small>Ref. ${watch.reference} - $${watch.currentPrice.toLocaleString()}</small>
                </div>
            `).join('');

            dropdown.classList.add('active');
        }

        function selectAlertWatch(brand, model, reference) {
            document.getElementById('alertWatch').value = `${brand} ${model} (${reference})`;
            document.getElementById('alertAutocomplete').classList.remove('active');
        }

        // Close autocomplete when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.autocomplete-container')) {
                document.querySelectorAll('.autocomplete-dropdown').forEach(d => d.classList.remove('active'));
            }
        });

        // ============================================
        // TRENDING WATCHES
        // ============================================

        function loadTrending() {
            // In production, fetch from API: /api/watches/trending
            // For now, use mock data based on search history
            const trendingData = getTrendingWatches();
            renderTrending(trendingData);
        }

        function getTrendingWatches() {
            // Mock trending based on search history and popularity
            const trending = Object.values(MOCK_WATCHES).map((watch, index) => ({
                ...watch,
                searches: Math.floor(Math.random() * 1000) + 100,
                rank: index + 1
            }));

            return trending.sort((a, b) => b.searches - a.searches).slice(0, 6);
        }

        function renderTrending(watches) {
            const grid = document.getElementById('trendingGrid');
            grid.innerHTML = watches.map((watch, index) => `
                <div class="trending-card" onclick="searchFromTrending('${watch.brand}', '${watch.model}', '${watch.reference}')">
                    <h3>${watch.brand} ${watch.model}</h3>
                    <div class="reference">Ref. ${watch.reference}</div>
                    <div class="trending-stats">
                        <div class="trending-price">$${watch.currentPrice.toLocaleString()}</div>
                        <div class="trending-badge">#${index + 1} Trending</div>
                    </div>
                </div>
            `).join('');
        }

        function searchFromTrending(brand, model, reference) {
            document.getElementById('brand').value = brand;
            document.getElementById('model').value = model;
            document.getElementById('reference').value = reference;
            showView('search');
            document.querySelector('.nav-btn').classList.add('active');
            searchWatch();
        }

        function refreshTrending() {
            // In production: fetch('/api/watches/trending?refresh=true')
            loadTrending();
        }

        // ============================================
        // PRICE ALERTS
        // ============================================

        function createAlert() {
            const watchInput = document.getElementById('alertWatch').value;
            const condition = document.getElementById('alertCondition').value;
            const targetPrice = parseFloat(document.getElementById('alertPrice').value);

            if (!watchInput || !targetPrice) {
                alert('Please fill in all fields');
                return;
            }

            const alert = {
                id: Date.now(),
                watch: watchInput,
                condition: condition,
                targetPrice: targetPrice,
                createdAt: new Date().toLocaleDateString()
            };

            priceAlerts.push(alert);
            localStorage.setItem('priceAlerts', JSON.stringify(priceAlerts));

            // Clear form
            document.getElementById('alertWatch').value = '';
            document.getElementById('alertPrice').value = '';

            renderAlerts();

            // TODO: In production, send to API
            // fetch('/api/alerts', {
            //     method: 'POST',
            //     headers: { 'Content-Type': 'application/json' },
            //     body: JSON.stringify(alert)
            // });
        }

        function renderAlerts() {
            const list = document.getElementById('alertList');
            
            if (priceAlerts.length === 0) {
                list.innerHTML = '<p style="text-align: center; color: var(--text-secondary); padding: 2rem;">No price alerts set. Create one above to get notified when prices change.</p>';
                return;
            }

            list.innerHTML = priceAlerts.map(alert => `
                <div class="alert-item">
                    <div class="alert-info">
                        <h4>${alert.watch}</h4>
                        <small>Alert when price ${alert.condition === 'below' ? 'drops below' : 'rises above'} $${alert.targetPrice.toLocaleString()} • Created ${alert.createdAt}</small>
                    </div>
                    <button class="delete-alert" onclick="deleteAlert(${alert.id})">Delete</button>
                </div>
            `).join('');
        }

        function deleteAlert(id) {
            priceAlerts = priceAlerts.filter(a => a.id !== id);
            localStorage.setItem('priceAlerts', JSON.stringify(priceAlerts));
            renderAlerts();

            // TODO: In production
            // fetch(`/api/alerts/${id}`, { method: 'DELETE' });
        }

        // ============================================
        // COLLECTION MANAGEMENT
        // ============================================

        function openAddToCollectionModal() {
            document.getElementById('addCollectionModal').classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        function quickAddToCollection() {
            if (!currentWatchData) {
                alert('No watch selected');
                return;
            }

            // Pre-fill the modal with current watch data
            document.getElementById('collectionBrand').value = currentWatchData.brand;
            document.getElementById('collectionModel').value = currentWatchData.model;
            document.getElementById('collectionReference').value = currentWatchData.reference;
            
            // Set purchase price to current market price as default (user can change)
            document.getElementById('purchasePrice').value = currentWatchData.currentPrice;
            
            // Set today's date as default
            document.getElementById('purchaseDate').valueAsDate = new Date();
            
            // Open the modal
            openAddToCollectionModal();
        }

        function quickAddFromSearch(brand, model, reference, currentPrice) {
            // Pre-fill the modal with watch data from search results
            document.getElementById('collectionBrand').value = brand;
            document.getElementById('collectionModel').value = model;
            document.getElementById('collectionReference').value = reference;
            document.getElementById('purchasePrice').value = currentPrice;
            document.getElementById('purchaseDate').valueAsDate = new Date();
            
            // Open the modal
            openAddToCollectionModal();
        }

        function addToCollection() {
            const brand = document.getElementById('collectionBrand').value;
            const model = document.getElementById('collectionModel').value;
            const reference = document.getElementById('collectionReference').value;
            const purchasePrice = parseFloat(document.getElementById('purchasePrice').value);
            const purchaseDate = document.getElementById('purchaseDate').value;

            // Find current market price
            const watchKey = `${brand.toLowerCase()}-${model.toLowerCase()}-${reference.toLowerCase()}`.replace(/\s+/g, '-');
            let currentPrice = purchasePrice; // Default to purchase price
            
            for (const [key, value] of Object.entries(MOCK_WATCHES)) {
                if (key.includes(brand.toLowerCase()) || key.includes(reference.toLowerCase())) {
                    currentPrice = value.currentPrice;
                    break;
                }
            }

            const watch = {
                id: Date.now(),
                brand,
                model,
                reference,
                purchasePrice,
                currentPrice,
                purchaseDate,
                addedAt: new Date().toISOString()
            };

            collection.push(watch);
            localStorage.setItem('watchCollection', JSON.stringify(collection));

            // Clear and close
            document.getElementById('collectionBrand').value = '';
            document.getElementById('collectionModel').value = '';
            document.getElementById('collectionReference').value = '';
            document.getElementById('purchasePrice').value = '';
            document.getElementById('purchaseDate').value = '';
            closeModal('addCollectionModal');

            renderCollection();

            // TODO: In production
            // fetch('/api/collection', {
            //     method: 'POST',
            //     headers: { 'Content-Type': 'application/json' },
            //     body: JSON.stringify(watch)
            // });
        }

        function renderCollection() {
            updateCollectionStats();

            const grid = document.getElementById('collectionGrid');
            
            if (collection.length === 0) {
                grid.innerHTML = `
                    <div class="add-to-collection" onclick="openAddToCollectionModal()">
                        <div class="add-to-collection-icon">+</div>
                        <div>Add your first watch to start tracking your collection</div>
                    </div>
                `;
                return;
            }

            grid.innerHTML = collection.map(watch => {
                const gainLoss = watch.currentPrice - watch.purchasePrice;
                const gainLossPercent = ((gainLoss / watch.purchasePrice) * 100).toFixed(2);
                
                return `
                    <div class="collection-card">
                        <h3>${watch.brand} ${watch.model}</h3>
                        <div class="reference">Ref. ${watch.reference}</div>
                        <div class="collection-price">$${watch.currentPrice.toLocaleString()}</div>
                        <div class="purchase-info">
                            Purchased: $${watch.purchasePrice.toLocaleString()} on ${new Date(watch.purchaseDate).toLocaleDateString()}
                        </div>
                        <div class="price-change ${gainLoss >= 0 ? 'positive' : 'negative'}" style="margin-bottom: 1rem;">
                            ${gainLoss >= 0 ? '+' : ''}$${Math.abs(gainLoss).toLocaleString()} (${gainLossPercent >= 0 ? '+' : ''}${gainLossPercent}%)
                        </div>
                        <div class="collection-actions">
                            <button onclick="viewWatchDetails('${watch.brand}', '${watch.model}', '${watch.reference}')">View Details</button>
                            <button class="delete-alert" onclick="removeFromCollection(${watch.id})">Remove</button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function updateCollectionStats() {
            const totalWatches = collection.length;
            const totalValue = collection.reduce((sum, w) => sum + w.currentPrice, 0);
            const totalCost = collection.reduce((sum, w) => sum + w.purchasePrice, 0);
            const totalGainLoss = totalValue - totalCost;

            document.getElementById('collectionCount').textContent = totalWatches;
            document.getElementById('collectionValue').textContent = '$' + totalValue.toLocaleString();
            
            const gainLossElement = document.getElementById('collectionGainLoss');
            gainLossElement.textContent = (totalGainLoss >= 0 ? '+' : '') + '$' + Math.abs(totalGainLoss).toLocaleString();
            gainLossElement.style.color = totalGainLoss >= 0 ? 'var(--success-green)' : 'var(--danger-red)';

            if (collection.length > 0) {
                const bestPerformer = collection.reduce((best, watch) => {
                    const gain = ((watch.currentPrice - watch.purchasePrice) / watch.purchasePrice) * 100;
                    const bestGain = ((best.currentPrice - best.purchasePrice) / best.purchasePrice) * 100;
                    return gain > bestGain ? watch : best;
                });
                document.getElementById('bestPerformer').textContent = `${bestPerformer.brand} ${bestPerformer.model}`;
            }
        }

        function removeFromCollection(id) {
            if (!confirm('Are you sure you want to remove this watch from your collection?')) return;
            
            collection = collection.filter(w => w.id !== id);
            localStorage.setItem('watchCollection', JSON.stringify(collection));
            renderCollection();

            // TODO: In production
            // fetch(`/api/collection/${id}`, { method: 'DELETE' });
        }

        function viewWatchDetails(brand, model, reference) {
            document.getElementById('brand').value = brand;
            document.getElementById('model').value = model;
            document.getElementById('reference').value = reference;
            showView('search');
            document.querySelector('.nav-btn').classList.add('active');
            searchWatch();
        }

        // ============================================
        // API INTEGRATION GUIDE
        // ============================================

        // ============================================
        // API INTEGRATION GUIDE
        // ============================================

        /*
        TO INTEGRATE WITH YOUR BACKEND API:

        1. SEARCH ENDPOINT
           Replace the searchWatch() function's mock data logic with:
           
           fetch(`/api/watches/search?brand=${encodeURIComponent(brand)}&model=${encodeURIComponent(model)}&year=${encodeURIComponent(year)}&reference=${encodeURIComponent(reference)}`)
               .then(response => response.json())
               .then(data => {
                   // data can be either an array of watches or a single watch object
                   if (Array.isArray(data) && data.length > 1) {
                       displaySearchResults(data);
                   } else if (Array.isArray(data)) {
                       displayWatchData(data[0]);
                   } else {
                       displayWatchData(data);
                   }
               })
               .catch(error => {
                   console.error('Error:', error);
                   alert('Error searching for watch. Please try again.');
               });

        2. WATCH DATA FORMAT
           Your API should return JSON in this format:
           
           Single watch:
           {
               "brand": "Rolex",
               "model": "Submariner Date",
               "reference": "126610LN",
               "year": 2020,
               "description": "Watch description...",
               "currentPrice": 15850,
               "priceHistory": [
                   {
                       "date": "2024-02-01",
                       "price": 14200,
                       "change": 0,
                       "source": "Chrono24"
                   },
                   ...
               ]
           }
           
           Multiple watches (for year-based searches):
           [
               {
                   "brand": "Omega",
                   "model": "Speedmaster Professional",
                   "reference": "145.022",
                   "year": 1985,
                   "currentPrice": 8200,
                   ...
               },
               {
                   "brand": "Omega",
                   "model": "Speedmaster Automatic",
                   "reference": "345.0022",
                   "year": 1985,
                   "currentPrice": 3900,
                   ...
               }
           ]

        3. AUTOCOMPLETE ENDPOINT
           GET /api/autocomplete?field=brand&q=rolex
           GET /api/autocomplete?field=model&q=submariner&brand=rolex
           GET /api/autocomplete?field=year&q=198
           GET /api/autocomplete?field=reference&q=126610
           
           Returns: { "suggestions": ["Rolex", "Roger Dubuis", ...] }

        4. YEAR SEARCH LOGIC
           When a user searches by year (e.g., "1985 Omega Speedmaster"), your backend should:
           - Filter watches by production year OR release year
           - Return multiple results if multiple references exist for that year
           - Order by popularity or current price
           
           Example query:
           SELECT * FROM watches 
           WHERE brand LIKE '%Omega%' 
           AND model LIKE '%Speedmaster%' 
           AND year = 1985
           ORDER BY popularity DESC, current_price DESC;

        4. TRENDING WATCHES ENDPOINT
           GET /api/watches/trending
           
           Returns: [
               {
                   "brand": "Rolex",
                   "model": "Submariner",
                   "reference": "126610LN",
                   "currentPrice": 15850,
                   "searches": 1543,
                   "rank": 1
               },
               ...
           ]

        5. PRICE ALERTS ENDPOINTS
           POST /api/alerts
           Body: {
               "watch": "Rolex Submariner (126610LN)",
               "condition": "below",
               "targetPrice": 15000
           }
           
           GET /api/alerts - Get all alerts for user
           DELETE /api/alerts/:id - Delete specific alert
           
           Background job should check prices periodically and send notifications
           when conditions are met (email, push notifications, etc.)

        6. COLLECTION ENDPOINTS
           POST /api/collection
           Body: {
               "brand": "Rolex",
               "model": "Submariner",
               "reference": "126610LN",
               "purchasePrice": 14000,
               "purchaseDate": "2024-01-15"
           }
           
           GET /api/collection - Get user's full collection with current prices
           DELETE /api/collection/:id - Remove watch from collection
           GET /api/collection/stats - Get collection statistics

        7. AUTHENTICATION
           Add JWT or session-based authentication:
           - All user-specific endpoints (alerts, collection) require auth
           - Include Authorization header: "Bearer <token>"
           
           Example:
           fetch('/api/collection', {
               headers: {
                   'Authorization': 'Bearer ' + userToken,
                   'Content-Type': 'application/json'
               }
           })

        8. REAL-TIME PRICE UPDATES
           Consider implementing WebSocket for real-time price updates:
           
           const ws = new WebSocket('wss://your-domain.com/prices');
           ws.onmessage = (event) => {
               const priceUpdate = JSON.parse(event.data);
               updatePriceDisplay(priceUpdate);
           };

        9. RATE LIMITING
           Implement rate limiting on your API to prevent abuse:
           - Search: 100 requests per minute per user
           - Autocomplete: 20 requests per second
           - Trending: Cache for 5-10 minutes

        10. DATA SOURCES
            Popular watch price data sources:
            - Chrono24 API (paid)
            - WatchCharts (paid)
            - Web scraping (be careful with legal/ToS)
            - Your own marketplace data
            
            Consider aggregating multiple sources for accuracy
        */

        // ============================================
        // INITIALIZATION
        // ============================================

        // Load alerts and collection on page load
        document.addEventListener('DOMContentLoaded', () => {
            renderAlerts();
            renderCollection();
        });
    </script>
</body>
</html>
